{
  "compilerOptions": {
    "lib": ["es5", "es6", "ESNext"],
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["./src/*"],
  "exclude": ["./node_modules"]
}
